<header
  class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm transition-all duration-200"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4 md:py-6">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center" aria-label="Orbi home">
          <span
            class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-indigo-700 bg-clip-text text-transparent"
            >Orbi</span
          >
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="p-2 rounded-full text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Desktop navigation -->
      <nav class="hidden md:flex space-x-8">
        <a
          href="#como-funciona"
          class="text-gray-700 hover:text-blue-600 rounded-full px-3 py-2 text-sm font-medium transition-colors"
        >
          Cómo Funciona
        </a>
        <a
          href="#programas"
          class="text-gray-700 hover:text-blue-600 rounded-full px-3 py-2 text-sm font-medium transition-colors"
        >
          Programas
        </a>
        <a
          href="#testimonios"
          class="text-gray-700 hover:text-blue-600 rounded-full px-3 py-2 text-sm font-medium transition-colors"
        >
          Testimonios
        </a>
        <a
          href="#contacto"
          class="text-gray-700 hover:text-blue-600 rounded-full px-3 py-2 text-sm font-medium transition-colors"
        >
          Contacto
        </a>
      </nav>

      <!-- Call to action -->
      <div class="hidden md:block">
        <a
          href="#registro"
          class="inline-flex items-center justify-center rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
        >
          Empieza Ahora
        </a>
      </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state -->
    <div id="mobile-menu" class="hidden md:hidden py-2 space-y-1">
      <a
        href="#como-funciona"
        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100 hover:text-blue-600"
      >
        Cómo Funciona
      </a>
      <a
        href="#programas"
        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100 hover:text-blue-600"
      >
        Programas
      </a>
      <a
        href="#testimonios"
        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100 hover:text-blue-600"
      >
        Testimonios
      </a>
      <a
        href="#contacto"
        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100 hover:text-blue-600"
      >
        Contacto
      </a>
      <a
        href="#registro"
        class="block w-full text-center mt-3 px-4 py-2 rounded-full bg-blue-600 text-base font-medium text-white hover:bg-blue-700"
      >
        Empieza Ahora
      </a>
    </div>
  </div>
</header>
